<h1>New Display</h1>

<% if @errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @display, url: user_displays_path(@user), method: :post) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Display' %>
  </div>
<% end %>
